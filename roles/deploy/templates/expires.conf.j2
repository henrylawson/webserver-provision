location ~* \.(?:manifest|appcache|html?|xml|json)$ {
  expires 1h;
  # access_log logs/static.log;
}

location ~* \.(?:rss|atom)$ {
  expires 1h;
  add_header Cache-Control "public";
}

location ~* \.(?:jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc,woff,woff2,ttf,eot)$ {
  expires 6M;
  access_log off;
  add_header Cache-Control "public";
}

location ~* \.(?:css|js)$ {
  expires 6M;
  access_log off;
  add_header Cache-Control "public";
}
